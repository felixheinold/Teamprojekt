<MiniGameSelectionScreen>:
    name: "minigame"

    BoxLayout:
        orientation: "vertical"
        padding: [20, 20]
        spacing: 20

        Label:
            id: module_label
            text: "Kein Modul ausgewählt"
            font_size: 18
            bold: True
            size_hint_y: None
            height: "40dp"
            color: 0, 0, 0, 1

        ScrollView:
            do_scroll_y: True

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

                Button:
                    text: "Multiple Choice"
                    size_hint_y: None
                    height: "45dp"
                    background_color: 0.7, 1, 0.9, 1
                    on_press: root.start_game("Multiple Choice")

                Button:
                    text: "Memory"
                    size_hint_y: None
                    height: "45dp"
                    background_color: 0.7, 1, 0.9, 1
                    on_press: root.start_game("Memory")

                Button:
                    text: "Quizduell"
                    size_hint_y: None
                    height: "45dp"
                    background_color: 0.7, 1, 0.9, 1
                    on_press: root.start_game("Quizduell")

                Button:
                    text: "Lückentext"
                    size_hint_y: None
                    height: "45dp"
                    background_color: 0.7, 1, 0.9, 1
                    on_press: root.start_game("Lückentext")

                Button:
                    text: "Prüfungssimulation"
                    size_hint_y: None
                    height: "45dp"
                    background_color: 0.7, 1, 0.9, 1
                    on_press: root.start_game("Prüfungssimulation")

        BoxLayout:
            size_hint_y: None
            height: "50dp"
            spacing: 10

            Button:
                text: "zurück"
                on_press: app.change_screen("topic")

            Button:
                text: "weiter"
                on_press: app.change_screen("login")
