<LoginScreen>:
    name: "login"
    BoxLayout:
        orientation: "vertical"
        padding: [40, 40]
        spacing: 20

        Image:
            source: "assets/icons/welcome_icon.png"
            size_hint_y: 2
            fit_mode: "contain"

        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: 0.55


            Label:
                text: "Enter your email to sign up for this app"
                font_size: 14
                size_hint_y: None
                height: self.texture_size[1]

            TextInput:
                id: username_input
                hint_text: "email@domain.com"
                multiline: False
                size_hint_y: None
                height: "40dp"
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1
                padding: [10, 10]

            Button:
                text: "Continue"
                on_press: root.create_account(username_input.text)
                size_hint_y: None
                height: "45dp"
                background_color: 0, 0, 0, 1
                color: 1, 1, 1, 1
